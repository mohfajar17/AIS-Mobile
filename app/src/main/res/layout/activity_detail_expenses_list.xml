<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textNo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/textNamaItem"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/textJobOrder"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/textAccount"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/textNilai"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="right|top"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:padding="10dp"
            android:textColor="@android:color/black"/>

        <Spinner
            android:id="@+id/editApproval3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textApprove1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:padding="10dp"
            android:textColor="@android:color/black"/>

        <Spinner
            android:id="@+id/editApproval1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textApprove2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:padding="10dp"
            android:textColor="@android:color/black"/>

        <Spinner
            android:id="@+id/editApproval2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:spinnerMode="dialog" />
    </LinearLayout>
</LinearLayout>