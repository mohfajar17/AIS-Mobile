                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Supplier"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="No Acc"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Bank"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Account Name"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Payment"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Approval 1"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Approval 2"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Approval 3"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:src="@color/colorWhite"/>

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.core.widget.NestedScrollView>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:src="@color/colorBlack" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="815dp"
                                android:layout_height="match_parent"
                                android:gravity="right|top"
                                android:text="GrandTotal : "
                                android:padding="10dp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold|italic"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorBlack" />

                            <TextView
                                android:id="@+id/textGrandTotal"
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:text="Rp. -"
                                android:padding="10dp"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorBlack" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:src="@color/colorBlack" />
                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/bubble_red"/>

                <LinearLayout
                    android:id="@+id/layoutApproval"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"
                        android:text="Click to approve"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btnApprove1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/circle_green"
                            android:gravity="center"
                            android:text="APPROVAL 1"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/btnApprove2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/circle_green"
                            android:gravity="center"
                            android:text="APPROVAL 2"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/btnApprove3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/circle_green"
                            android:gravity="center"
                            android:text="APPROVAL 3"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editCommand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Command"
                        android:textColor="@color/colorBlack"
                        android:inputType="text" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/bubble_red"/>

                    <TextView
                        android:id="@+id/btnSaveApprove"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble_red"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text="SAVE APPROVAL"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/bubble_red"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textApproval1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Approval 1"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textApproval1Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Approval 1 Date"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textComment1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Comment 1"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/bubble_red"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textApproval2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Approval 2"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textApproval2Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Approval 2 Date"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textComment2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Comment 2"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/bubble_red"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textApproval3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Approval 3"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textApproval3Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Approval 3 Date"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textComment3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
