<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/layoutJo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/joTextNo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="-"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/joTextWorkOrders"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="-"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/joTextNamaItem"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="-"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/joTextDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:text="-"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/joTextDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:text="-"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/joTextWorkRequest"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:text="-"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/joTextJumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="-"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/joTextAbbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/joTextUnitPrice"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="right|top"
        android:text="-"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/joTextDiscount"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="right|top"
        android:text="-"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:src="@color/colorBlack"/>

    <TextView
        android:id="@+id/joTextSubTotal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="right|top"
        android:text="-"
        android:padding="10dp"
        android:textColor="@android:color/black"/>
</LinearLayout>