<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inventory.Stock.DetailStockActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAsukaBlue"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="50dp"
                android:padding="7dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_ab_back" />

            <TextView
                android:id="@+id/textNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:padding="10dp"
                android:gravity="left|center"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="Stock Adjustment"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/menuDetail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:background="@color/colorLightGray"
                android:textStyle="bold"
                android:text=" Detail "/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@color/colorWhite"/>

            <TextView
                android:id="@+id/menuCatatan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorRed"
                android:textStyle="bold"
                android:text=" Catatan "/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@color/colorWhite"/>

            <TextView
                android:id="@+id/menuHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorRed"
                android:textStyle="bold"
                android:text=" History "/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/layoutDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightGray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textAdjustmentNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Number"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textPenjelasanSingkat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Penjelasan"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textTglAdjustment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Tgl Adjustment"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/bubble_red"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textApprovalBy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Approval By"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textApprovalDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Approval Date"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textApprovalNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble"
                        android:paddingTop="10dp"
                        android:paddingLeft="140dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:text="-"
                        android:textColor="@color/colorBlack"/>

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bubble_sub"
                        android:padding="10dp"
                        android:text="Approval Notes"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/bubble_red"/>

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:text="Stock Adjustment"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAsukaBlue"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Item"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Spesifikasi"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Stock Sekarang"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Stok Aktual"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Penyesuaian"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Harga Satuan"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Sub Total"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:layout_width="220dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Catatan"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:src="@color/colorWhite"/>

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewDetail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.core.widget.NestedScrollView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAsukaBlue"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="201dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="301dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="131dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="131dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="131dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:text="Total : "
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>

                            <TextView
                                android:id="@+id/textTotal"
                                android:layout_width="170dp"
                                android:layout_height="match_parent"
                                android:gravity="right"
                                android:text="Rp. 0"
                                android:padding="10dp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:src="@color/colorWhite"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/bubble_red"/>

                <LinearLayout
                    android:id="@+id/layoutApproval"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"
                        android:text="Click to approve"
                        android:textColor="@color/colorBlack"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btnApprove1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/circle_green"
                            android:gravity="center"
                            android:text="PO APPROVAL 1"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>

                        <TextView
                            android:id="@+id/btnApprove2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/circle_green"
                            android:padding="10dp"
                            android:gravity="center"
                            android:text="NOTES"
                            android:textStyle="bold"
                            android:textColor="@color/colorWhite"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editCommand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:hint="Command"
                        android:textColor="@color/colorBlack"
                        android:inputType="text" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/bubble_red"/>

                    <TextView
                        android:id="@+id/btnSaveApprove"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bubble_red"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text="SAVE APPROVAL"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/bubble_red"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layoutCatatan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:background="@color/colorLightGray"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textCatatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:paddingLeft="10dp"
                    android:paddingTop="45dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="-"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_sub"
                    android:padding="10dp"
                    android:text="Catatan :"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"
            android:background="@color/colorLightGray"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textCreatedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:paddingLeft="140dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="-"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_sub"
                    android:padding="10dp"
                    android:text="Created By"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textCreatedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:paddingLeft="140dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="-"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_sub"
                    android:padding="10dp"
                    android:text="Created Date"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textModifiedBy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:paddingLeft="140dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="-"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_sub"
                    android:padding="10dp"
                    android:text="Modified By"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textModifiedDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble"
                    android:paddingLeft="140dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:text="-"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bubble_sub"
                    android:padding="10dp"
                    android:text="Modified Date"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRefresh"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_refresh"
        android:layout_margin="17dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>