<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Project.JobOrder.BuatJobOrderFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:text="Buat Job Order"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlack"
                android:text="Kolom dengan (*) harus diisi"/>

            <Button
                android:id="@+id/daftarJobOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp"
                android:text="Daftar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:background="@drawable/border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Job Order"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editJONomor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:enabled="false"
                    android:hint="nomor job order"
                    android:inputType="text"
                    android:text="JO-XXX-2005-0080" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipe Job Order"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/editJOType"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Order Category"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/editJOCategory"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales Quotation"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/editJOSalesQuotation"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P I C"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/editJOPic"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keterangan Job Order"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOKeterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="keterangan job order"
                    android:inputType="text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lokasi Job Order"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/editJOLokasi"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departemen"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/editJODepartemen"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tgl Awal"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editJOTglAwal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="dd-mm-yyyy"
                    android:inputType="text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tgl Akhir"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editJOTglAkhir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="dd-mm-yyyy"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Code Status"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/editJOJobCodeStatus"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales Order"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/editJOSalesOrder"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sales Archive"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="13dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editJOSalesArchive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse..."
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:background="@color/colorLightGray"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" No file selected."
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client PO Number"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOClientPoNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="client po number"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client PO Archive"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="13dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editJOClientPoArchive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Browse..."
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:background="@color/colorLightGray"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" No file selected."
                        android:padding="5dp"
                        android:textSize="18dp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nilai"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJONilai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="nilai"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budgeting Amount"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOBudgeting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="budgeting amount"
                    android:inputType="number" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jenis Pajak"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@android:color/holo_red_dark" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/editJOJenisPajak"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@color/colorGray"
                    android:layout_marginLeft="13dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:padding="2dp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorAsukaBlue"
                    android:text="Budget Details"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOMaterial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="material"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tools"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOTools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="tools"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Man Power"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOManPower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="man power"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash On Delivery"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOCod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="cash on delivery"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Work Order"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOWorkOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="work order"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material Return"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOMaterialReturn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="material return"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proposed Budget"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOProposed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="proposed budget"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash Project Report"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOCashProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="cash project report"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expenses"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOExpenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="expenses"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catatan"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/editJOCatatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="catatan" />

                <Button
                    android:id="@+id/simpanJobOrderBaru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAsukaBlue"
                    android:textColor="@color/colorWhite"
                    android:text="Buat" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>